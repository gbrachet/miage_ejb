<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ProjetEJB">
		<jta-data-source>jdbc/testpppm</jta-data-source>
		<class>entity.Abonnement</class>
		<class>entity.Article</class>
		<class>entity.Commande</class>
		<class>entity.Groupe</class>
		<class>entity.LigneCommande</class>
		<class>entity.Tag</class>
		<class>entity.TagPK</class>
		<class>entity.UtiAbo</class>
		<class>entity.UtiAboPK</class>
		<class>entity.Utilisateur</class>
		<properties>
			<property name="javax.persistence.target-database" value="MYSQL" />
			<property name="javax.persistence.logging.level" value="FINEST" />
		</properties>
	</persistence-unit>
</persistence>
